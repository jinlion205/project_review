                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                              <h6 class="text-white text-capitalize ps-3">Company management</h6>
                            </div>
                          </div>
                        <div class="card-body px-0 pb-2 pt-3">
                            <div class="table-responsive">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th
                                                class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">
                                                Companies</th>
                                            <th
                                                class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">
                                                Email</th>
                                            <th
                                                class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">
                                                Address</th>
                                            <th class="text-uppercase text-secondary text-xs font-weight-bolder align-middle my-auto text-end m-0">
                                                <button class="btn btn-primary m-0" id="btn-add-company">Add Company</button>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% company.forEach((entry) => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="/img/small-logos/logoizi.png"
                                                            class="avatar avatar-sm me-3" alt="xd">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm"><%= entry.name %></h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle text-sm">
                                                <p class="text-sm pb-0 mb-0 font-weight-bold"> <%= entry.email %> </p>
                                            </td>
                                            <td class="align-middle text-sm">
                                                <p class="text-sm pb-0 mb-0 font-weight-bold"> <%= entry.address %> </p>
                                            </td>
                                            <td class="align-middle m-0 my-auto text-end text-center">
                                                <form action="/admin/update-comp/<%= entry._id %>">
                                                    <button class="update btn btn-primary m-0" style="float: left;" id="update-company">Update</button>
                                                </form>
                                                <form action="/admin/delete" method="POST">
                                                    <input class="d-none" value="<%= entry._id %>" name="id">
                                                    <button class="del btn btn-danger m-0">Del</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--  -->

                <!-- add company -->
                <div class="add-company-form">

